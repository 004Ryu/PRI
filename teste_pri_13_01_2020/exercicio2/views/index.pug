extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-brown
                h1 Teste de PRI 2019/2020

                h3 Lista de Tipologias
            .w3-container
                table.w3-table-all
                    tr
                        th.w3-center.w3-large Designação

                    each tipologia in lista
                        tr
                            td.w3-center= tipologia.designacao
                            td.w3-center.button.w3-button(onclick="metaTipologia('" + tipologia.id + "')") #{tipologia.sigla}
            
            footer.w3-container.w3-brown 
                address TestePRI2019/20 App: Eduardo Semanas A75536